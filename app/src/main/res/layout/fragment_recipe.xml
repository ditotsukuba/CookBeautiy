<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cookhat.cookbeauty.RecipeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textSize="50dp"
        android:text="すごくお米がたべたい"
        android:textColor="@color/black"
        android:id="@+id/recipe_name"/>


    <ImageView
        android:id="@+id/ringnote"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/ringnote"
        >


    </ImageView>

    <TextView
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="130dp"
        android:textSize="25dp"
        android:text="・レトルトカレー\n・米"
        android:textColor="@color/black"
        android:id="@+id/ingredients"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="80dp"
        android:textSize="30dp"
        android:text="主な材料の例"
        android:textColor="@color/orange"
        />
    <ImageView
        android:layout_width="303dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"

        android:layout_marginLeft="460dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="86dp"
        android:layout_marginTop="100dp"

        android:src="@drawable/window_rate"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="彼の反応"
        android:layout_marginLeft="450dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/skyblue"/>
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="115dp"
        android:layout_marginLeft="470dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="40dp"
        android:numStars="5"
        android:stepSize="1.0" />
    <!--
        android:scaleX="0.5"
        android:scaleY="0.5"
        -->
    <ImageView
        android:id="@+id/memo_window"
        android:layout_width="450dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"

        android:layout_marginLeft="450dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="270dp"

        android:src="@drawable/window_memo"
        />
    <TextView
        android:id="@+id/memo_text"
        android:layout_width="430dp"
        android:layout_height="165dp"
        android:scaleType="fitXY"
        android:text="タップして入力してください"
        android:textSize="25dp"

        android:layout_marginLeft="468dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="285dp" />

    <ImageView
        android:id="@+id/memo"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"

        android:layout_marginLeft="450dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="210dp"

        android:src="@drawable/memo"

        />

    <ImageView
        android:id="@+id/allergy_view"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:scaleType="fitStart"
        android:layout_marginLeft="700dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/allergy"/>




</FrameLayout>
